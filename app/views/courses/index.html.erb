<div class="course-cards" id="artlist">
  <% @courses.each do |course| %>
    <% if course.released %>
      <div>
        <%= link_to(
          raw("#{tag.div(
            image_tag(course.image, class: "course-image" ),
          class: "image-container" )}
          #{tag.span(course.description, class: "course-desc")}
          #{tag.p(course.title)}"),
        course, data: { turbo: "false" }) %>
      </div>
    <% end %>
  <% end %>
</div>

